    <ResourceDictionary>
      <common:JsonData x:Key="FoodDish">
       
        { "Code": "2D4SXD", "Discount":29,"Name":"Drinks", "PicUrl":"friend_thumbnail_27.jpg","ExpiryDate":"Dec 15,2016" }
